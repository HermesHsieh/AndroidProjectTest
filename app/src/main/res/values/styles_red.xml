<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeRed" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/red_700</item>
        <item name="actionModeBackground">@color/red_700</item>
        <item name="itemBackground">@color/red_700</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeRed.Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/grey_300</item>
    </style>

    <style name="Button.Red">
        <item name="colorAccent">@color/red_700</item>
    </style>

    <style name="Button.Trans.Red">
        <item name="colorAccent">@color/red_700_trans</item>
    </style>

    <style name="Button.RedLight">
        <item name="colorAccent">@color/red_500</item>
    </style>

    <style name="Button.Trans.RedLight">
        <item name="colorAccent">@color/red_500_trans</item>
    </style>

    <style name="Button.RedDark">
        <item name="colorAccent">@color/red_900</item>
    </style>

    <style name="Button.Trans.RedDark">
        <item name="colorAccent">@color/red_900_trans</item>
    </style>

    <style name="Button.White.RedLight">
        <item name="android:textColorPrimaryInverse">@color/red_500</item>
    </style>

    <style name="Button.White.Red">
        <item name="android:textColorPrimaryInverse">@color/red_700</item>
    </style>

    <style name="Button.White.RedDark">
        <item name="android:textColorPrimaryInverse">@color/red_900</item>
    </style>

    <style name="TextRedLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_500</item>
    </style>

    <style name="TextRed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_700</item>
    </style>

    <style name="TextRedDeep" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_900</item>
    </style>

    <style name="HintTextRed" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/red_700</item>
    </style>

</resources>