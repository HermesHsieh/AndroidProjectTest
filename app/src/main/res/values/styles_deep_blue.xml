<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeDeepBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/deep_blue_700</item>
        <item name="colorPrimaryDark">@color/deep_blue_900</item>
        <item name="colorAccent">@color/deep_blue_500</item>
    </style>

    <style name="ButtonDeepBlueLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/deep_blue_500</item>
        <item name="colorControlHighlight">@color/deep_blue_A100</item>
    </style>

    <style name="ButtonDeepBlueLight.Trans">
        <item name="colorButtonNormal">@color/grey_500_trans</item>
        <item name="colorAccent">@color/deep_blue_500_trans</item>
    </style>

    <style name="ButtonDeepBlue" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/deep_blue_700</item>
        <item name="colorControlHighlight">@color/deep_blue_A100</item>
    </style>

    <style name="ButtonDeepBlue.Trans">
        <item name="colorButtonNormal">@color/grey_500_trans</item>
        <item name="colorAccent">@color/deep_blue_700_trans</item>
    </style>

    <style name="ButtonDeepBlueDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/deep_blue_900</item>
        <item name="colorControlHighlight">@color/deep_blue_A100</item>
    </style>

    <style name="ButtonDeepBlueDark.Trans">
        <item name="colorButtonNormal">@color/grey_500_trans</item>
        <item name="colorAccent">@color/deep_blue_900_trans</item>
    </style>

    <style name="ButtonWhiteDeepBlueLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/grey_100</item>
        <item name="colorControlHighlight">@color/grey_A100</item>
        <item name="android:textColorPrimaryInverse">@color/deep_blue_500</item>
    </style>

    <style name="ButtonWhiteDeepBlue" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/grey_300</item>
        <item name="colorControlHighlight">@color/grey_A100</item>
        <item name="android:textColorPrimaryInverse">@color/deep_blue_500</item>
    </style>

    <style name="TextDeepBlueLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/deep_blue_500</item>
    </style>

    <style name="TextDeepBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/deep_blue_700</item>
    </style>

    <style name="TextDeepBlueDeep" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/deep_blue_900</item>
    </style>

    <style name="HintTextDeepBlue" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/deep_blue_700</item>
    </style>

</resources>