<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MVP.ToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/WhiteToolbarTitleAppearance</item>
    </style>

    <style name="WhiteToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteTextBtn.Red.Transparent" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@drawable/btn_red_transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryTheme" parent="@style/ThemeRed" />

    <style name="PrimaryButton" parent="@style/ButtonRedLight" />

    <style name="PrimaryButtonTrans" parent="@style/ButtonRedLight.Trans" />

    <style name="PrimaryButtonDeep" parent="@style/ButtonRedDark" />

    <style name="SecondButton" parent="@style/ButtonWhiteLight" />

    <style name="SecondEditText" parent="@style/InputLayoutWhiteLight" />

    <style name="SecondHintText" parent="@style/HintTextWhite" />

    <style name="ThirdButton" parent="@style/ButtonGreyLight" />

    <style name="PrimaryText" parent="@style/TextRed">
        <item name="android:textSize">@dimen/primary_text</item>
    </style>

    <style name="PrimaryText.SuperSmall">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="PrimaryText.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="PrimaryText.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="PrimaryText.SuperLarge">
        <item name="android:textSize">@dimen/super_large_text</item>
    </style>

    <style name="PrimaryTextDeep" parent="@style/TextRedDeep" />

    <style name="PrimaryTextDeep.SuperSmall">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="PrimaryTextDeep.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="PrimaryTextDeep.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="PrimaryTextDeep.SuperLarge">
        <item name="android:textSize">@dimen/super_large_text</item>
    </style>

    <style name="TextDisable" parent="@style/TextGreyLight" />

    <style name="TextDisable.SuperSmall">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="TextDisable.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextDisable.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextDisable.SuperLarge">
        <item name="android:textSize">@dimen/super_large_text</item>
    </style>

    <style name="TextTitle" parent="@style/TextGrey" />

    <style name="TextTitle.SuperSmall">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="TextTitle.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextTitle.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextTitle.SuperLarge">
        <item name="android:textSize">@dimen/super_large_text</item>
    </style>

    <style name="TextContent" parent="@style/TextBlack" />

    <style name="TextContent.SuperSmall">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextContent.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextContent.SuperLarge">
        <item name="android:textSize">@dimen/super_large_text</item>
    </style>

    <style name="PrimaryInputHintAppear" parent="@style/TextRed">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="PrimaryInputErrorAppear" parent="@style/TextRedLight">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="PrimaryInputCounterOverFlowAppear" parent="@style/TextRedLight">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="SecondInputLayout" parent="@style/HintTextWhite">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="SecondInputHintAppear" parent="@style/TextGreyLight">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="SecondInputErrorAppear" parent="@style/TextOrangeLight">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>

    <style name="SecondInputCounterOverFlowAppear" parent="@style/TextOrangeLight">
        <item name="android:textSize">@dimen/super_small_text</item>
    </style>


</resources>
