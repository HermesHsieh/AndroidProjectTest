<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MVP.ToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/WhiteToolbarTitleAppearance</item>
    </style>

    <style name="WhiteToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteTextBtn.Red.Transparent" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@drawable/btn_red_transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="colorAccent">@color/yellow_500</item>
        <!-- CheckBox and RadioButton -->
        <item name="buttonTint">@color/orange_500</item>
    </style>

    <style name="MyPrimaryButtonLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/red_500</item>
        <item name="colorControlHighlight">@color/grey_300</item>
    </style>

    <style name="MySecondButtonLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/red_700</item>
        <item name="colorControlHighlight">@color/grey_300</item>
    </style>

    <style name="MyPrimaryButtonDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlHighlight">@color/grey_300</item>
    </style>

    <style name="MySecondButtonDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/blue_300</item>
        <item name="colorControlHighlight">@color/grey_300</item>
    </style>
</resources>
