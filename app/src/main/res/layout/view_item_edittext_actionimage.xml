<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16"
    tools:background="@color/beige">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/dark_gray_blue"
        app:counterOverflowTextAppearance="@style/ErrorText"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorText"
        app:hintTextAppearance="@style/ChDarkGrayBlueText.Small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text"
            style="@style/ChNightText.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayout.LightGrey"
            tools:hint="hint"
            tools:text="content" />

    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:id="@+id/loading_progress"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/input_layout"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_8"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/action_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/input_layout"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_email"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>