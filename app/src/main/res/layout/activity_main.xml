<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.android.test.activity.home.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ThemeActivity" />

            <ImageView
                android:id="@+id/image_view3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/sort_like"
                android:transitionName="android_image"
                tools:background="#BB33FF23" />

            <tw.android.test.ui.view.ImageViewColored
                android:id="@+id/image_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/sort_like"
                android:transitionName="android_image"
                app:color_filter="@color/yellow_500" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="360dp"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/android_developer"
                android:transitionName="android_image"
                tools:background="#BBFF7878" />

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="360dp"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/android_oreo"
                android:transitionName="android_image"
                android:visibility="gone"
                tools:background="#BB33FF23" />

            <TextView
                android:id="@+id/textViewDrawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/sort_like"
                android:text="Activity" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/currency_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <tw.android.test.ui.CurrencyInputEditText
                    android:id="@+id/currency_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <tw.android.test.ui.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextInputLayout" />

            <Button
                android:id="@+id/rxjava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RxJava" />

            <Button
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collapsing"
                android:theme="@style/WhiteTextBtn.Red.Transparent" />

            <Button
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NumberPicker" />

            <Button
                android:id="@+id/menu_action_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search" />

            <Button
                android:id="@+id/ultimate_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UltimateRecyclerView" />

            <Button
                android:id="@+id/base_recycler_view_adapter_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BaseRecyclerViewAdapterHelper" />

            <Button
                android:id="@+id/percent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PercentLayout" />

            <Button
                android:id="@+id/data_binding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DataBinding" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login" />

            <Button
                android:id="@+id/pick_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PickDate" />

            <Button
                android:id="@+id/dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dialog" />

            <Button
                android:id="@+id/image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ImageButton" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constrain_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="-3dp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="100"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="@+id/icon"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="100"
                    tools:visibility="visible" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
