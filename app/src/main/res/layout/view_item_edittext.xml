<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16"
    tools:background="@color/beige">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/dark_gray_blue"
        app:counterOverflowTextAppearance="@style/ErrorText"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorText"
        app:hintTextAppearance="@style/ChDarkGrayBlueText.Small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text"
            style="@style/ChNightText.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayout.LightGrey"
            tools:hint="hint"
            tools:text="content" />

    </android.support.design.widget.TextInputLayout>
</FrameLayout>