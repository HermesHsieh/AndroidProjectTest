<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hermes.test">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="tw.android.test.activity.home.MainActivity"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="tw.android.test.activity.collapsing.CollapsingActivity"
            android:theme="@style/AppTheme"
            />

        <activity android:name="tw.android.test.activity.numberpicker.NumberPickerActivity"
            />
        <activity
            android:name="tw.android.test.activity.search.SearchActivity"
            >
        </activity>
        <activity
            android:name="tw.android.test.activity.search.SearchResultsActivity"
            android:launchMode="singleTop"
            >
        </activity>

        <activity android:name="tw.android.test.activity.ultimaterecyclerview.UltimaterecyclerviewActivity"
            />

        <activity android:name="tw.android.test.activity.baserecyclerviewadapterhelper.BaseRecyclerViewAdapterHelperActivity"
            />

        <receiver android:name="tw.android.test.AlarmReceiver"/>

        <receiver
            android:name="tw.android.test.PackageEventReceiver"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>

                <data android:scheme="package"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>