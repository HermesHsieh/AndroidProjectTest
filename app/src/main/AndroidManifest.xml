<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hermes.test">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="tw.android.test.activity.home.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="tw.android.test.activity.collapsing.CollapsingActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="tw.android.test.activity.numberpicker.NumberPickerActivity" />
        <activity
            android:name="tw.android.test.activity.search.SearchActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name="tw.android.test.activity.search.SearchResultsActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.ultimaterecyclerview.UltimaterecyclerviewActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.baserecyclerviewadapterhelper.BaseRecyclerViewAdapterHelperActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.percentlayout.PercentLayoutActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.databinding.DataBindingActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.login.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.pickdate.PickDateActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.dialog.DialogActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.rxjava.RxJavaActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.inputtextlayout.InputTextLayoutActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.image.ImageActivity"
            android:parentActivityName="tw.android.test.activity.home.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tw.android.test.activity.home.MainActivity" />
        </activity>

        <activity
            android:name="tw.android.test.activity.theme.ThemeActivity"
            android:parentActivityName="tw.android.test.activity.home.MainActivity"
            android:theme="@style/PrimaryTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.video.VideoActivity"
            android:parentActivityName="tw.android.test.activity.home.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="tw.android.test.activity.anko.AnkoActivity"
            android:parentActivityName="tw.android.test.activity.home.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <receiver android:name="tw.android.test.AlarmReceiver" />

        <receiver
            android:name="tw.android.test.PackageEventReceiver"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name="tw.android.test.LocaleChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>